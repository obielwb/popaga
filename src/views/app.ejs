<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <base href="/" />
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PóPaga: App</title>

    <!-- CSS -->
    <link rel="stylesheet" href="/css/app.css" />

    <!-- FontAwesome -->
    <script
      src="https://kit.fontawesome.com/d67355562c.js"
      crossorigin="anonymous"
    ></script>

    <!-- Favicon -->
    <link rel="icon" />
  </head>
  <body>
    <nav id="navbar">
      <img src="/images/icons/home.svg" alt="Home icon" />
      <img src="/images/icons/payments.svg" alt="Payments icon" />
    </nav>

    <main id="container">
      <header id="header">
        <a id="nav-logo" href="/app"
          >PóPaga <i class="fas fa-piggy-bank"></i
        ></a>
        <h1>Bem vindo, <%= user.username %>.</h1>
        <div id="themes-container">
          <i id="light" class="fas fa-sun"></i>
          <i id="dark" class="fas fa-moon"></i>
        </div>
      </header>
      <div id="content">
        <section id="no-debts">
          <div class="section-label">
            <p>Sem Dívidas</p>
            <button id="add-card">+</button>
          </div>
          <%- include('./partials/cards.ejs') %>
        </section>
        <section id="outstanding">
          <div class="section-label">
            <p>Em aberto</p>
          </div>
          <%- include('./partials/cards.ejs') %>
        </section>
        <section id="paid">
          <div class="section-label">
            <p>Quitado</p>
          </div>
          <%- include('./partials/cards.ejs') %>
        </section>
        <section id="filed">
          <div class="section-label">
            <p>Arquivados</p>
          </div>
          <%- include('./partials/cards.ejs') %>
        </section>
      </div>
    </main>
    <script src="/scripts/theme.js"></script>
  </body>
</html>
